@model ApplicationUser

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h3>Hesap Eklenecek Kişinin Bilgileri</h3>
        <p>Kullanıcının Adı : @Model.Name</p>
        <p>Kullanıcının Soyadı : @Model.Surname</p>
        <p>Kullanıcının Aktif Hesap Sayısı :  <getAccountCount app-user-id="@Model.Id"></getAccountCount></p>
    </div>

    <div class="col-6">
        <h4>Ekleme İşlemi</h4>
    </div>
</div>